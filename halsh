#!/bin/bash

halsh â€“ proxy shell z automatycznym feedbackiem do HalBridge

CMD="$*"
RESULT=$(bash -c "$CMD" 2>&1)

curl -s -X POST https://localhost:5000/run-feedback
-H "Authorization: Bearer bardzo_sekretny_token"
-H "Content-Type: application/json"
-d "{"command":"$CMD","output":$(jq -Rs . <<< "$RESULT")}" > /dev/null

echo "$RESULT"
